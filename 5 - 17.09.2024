  def mostrar_nome_por_numero(nome_arquivo, numero):
    with open(nome_arquivo, 'r') as arquivo:
        linhas = arquivo.readlines()
    
    if 1 <= numero <= len(linhas):
        nome = linhas[numero - 1].strip()  # Subtrai 1 para ajustar o índice da lista
        print(f"Nome correspondente ao número {numero}: {nome}")
    else:
        print(f"Número {numero} fora do intervalo válido. O arquivo tem {len(linhas)} linhas.")
    
