  def imprimir_conteudo_arquivo(nome_arquivo):
    with open(nome_arquivo, 'r') as arquivo:
        conteudo = arquivo.read()
    
    print(f"Conteúdo do arquivo '{nome_arquivo}':")
    print(conteudo)
    
