  def gravar_nome_em_arquivo(nome_arquivo):
    nome = input("Informe seu nome: ")
    
    with open(nome_arquivo, 'w') as arquivo:
        arquivo.write(nome)
    
    print(f"Nome '{nome}' gravado no arquivo '{nome_arquivo}'.")

